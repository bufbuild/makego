FROM --platform=${BUILDPLATFORM} golang:1.21.5-alpine3.18 as builder

WORKDIR /workspace

COPY go.mod go.sum /workspace/
RUN go mod download

COPY cmd /workspace/cmd
COPY private /workspace/private

ARG TARGETOS
ARG TARGETARCH
RUN CGO_ENABLED=0 GOOS=${TARGETOS} GOARCH=${TARGETARCH} \
  go build -ldflags "-s -w" -trimpath -o /go/bin/foo ./cmd/foo

FROM --platform=${TARGETPLATFORM} alpine:3.18.5

RUN apk add --update --no-cache \
    ca-certificates \
    git \
    openssh-client && \
  rm -rf /var/cache/apk/*

COPY --from=builder /go/bin/foo /usr/local/bin/foo

ENTRYPOINT ["/usr/local/bin/foo"]
